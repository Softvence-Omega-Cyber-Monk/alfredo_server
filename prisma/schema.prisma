  NID
  PASSPORT
  BIRTH_CERTIFICATE
}

enum Language {
  ENGLISH
  GREEK
}

enum EmploymentStatus {
  WORKER
  RETIRED
  STUDENT
  UNEMPLOYED
}

enum TravelGroup {
  BY_MYSELF
  FAMILY
  COUPLE
